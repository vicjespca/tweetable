<%=form_with model: tweet do |form| %>
  <% if @tweet.errors.any? %>
    <div>
      <ul>
        <% @tweet.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <div>
      <% if data %>
        <%= form.hidden_field :tweet_id, value: data.id  %>
      <% end %>
      <%= form.text_area :body, class:"input" %>
      <%= form.submit "TWEET", class:"btn btn-primary-tweet" %>
    </div>
  </div>
<% end %>